[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow dim bold
    frag = magenta bold
    old = red bold
    new = green dim  bold
[alias]
    st = status
    a = add
    aa = add -A
    ap = add -p
    ci = commit
    co = checkout
    ca = commit -a
    cav = commit -a -v
    cam = commit --amend
    camr = commit --amend --reset-author
    cv = commit -v
    cp = commit -p
    cpv = commit -p -v
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    rba = rebase --abort
    ff = merge --ff-only
    nf = merge --no-ff
    sq = merge --squash
    cl = clone
    br = branch
    ba = branch -a
    bm = branch --merged
    bn = branch --no-merged
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --oneline --graph
    lola = log --oneline --graph --all
    lolfp = log --oneline --graph --first-parent
    sl = shrotlog
    sls = shortlog -s
    ls = ls-files
    pl = pull
    pr = pull --rebase
    ps = push
    fix = "!vim $(git diff --name-only --diff-filter=U)"
[push]
    default = simple
    autoSetupRemote = true
[credential]
    helper = cache --timeout 3600
[core]
    pager = less -x1,5
    autocrlf = input
